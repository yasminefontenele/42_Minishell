GREEN				=	\033[0;32m
RED					=	\033[0;31m
YELLOW				=	\033[0;33m
MAGENTA				=	\033[0;35m
CYAN				=	\033[0;36m
END					=	\033[0m


NAME	=	Minishell

HEADER	= 	Minishell.h
CC		=	cc
CFLAGS	=	-Wall -Wextra -Werror
RM		=	rm -f


$(NAME):	$(OBJS)
			@$(CC) $(CFLAGS) $(OBJS) $(HEADER) -o $(NAME)
			@echo " $(MAGENTA)																												"
			@echo " 	    ▒                                                                                                ▒              "
			@echo "      ░▒▒░                                                                                              ▓▒▒              "
			@echo "     ░▒▒▒▒░                                                                                           ▒▒▒▒▒              "
			@echo "    ▒▒▒▒▒▒▒                                                                                          ▒▒▒▒▒▒░      		"
			@echo "  ░▒▒▒▒▒▒▒▒  ▒▒     ████     ▒███   ██▒             ██▒          ███                  ██   ██░     ▒▒▒▒▒▒▒▒░  ▓░  		"
			@echo " ░▒▒▒▒▒▒▒▒▒░░▒▒░    ████▒    ████                                ███                  ██   ██░    ▓▒▒▒▒▒▒▒▓▒ ▒▒▒			"
			@echo " ▒▒▒▒▒▒▒░▒▒▒▒▒▒▓    █████   ██░██   ██░  ████████   ██░ ░██████  ████████   ░██████   ██   ██░   ░▒▒▒▒▒▒░░▒▒▒▒▒▒▒ 		"
			@echo " ▒▒▒▒▒▒░░░▒▒▒▒▒▓    ███▒██  ██ ██   ██░  ███   ██░  ██░ ███░     ███   ██▓ ░██   ▓██  ██   ██░   ▒▒▒▒▒▒▒░░░▒▒▒▒▒▒ 		"
			@echo " ▓▒▒▒░▒░░░░▒▒▒▒░    ███ ██ ██  ██   ██░  ██░   ██░  ██░  ░█████  ███   ██▓ ▒████████  ██   ██░    ▒▒▒▒░▒░░░░▒▒▒▒  		"
			@echo "  ▒▒▒░░░░░░░▒▒░     ███ ░███▒  ██   ██░  ██░   ██░  ██░ ░    ██  ███   ██▓  ██▒       ██   ██░     ▒▒▒░░░░░░░▒▒          "
			@echo "    ▒▒░░ ░░▒░       ███  ███   ██   ██░  ██░   ██░  ██░ ██████░  ███   ██▓   ██████░  ██   ██░      ░▒░░░ ░░▒░    $(END)	"
			@echo " $(CYAN)                    			Made by yfontene and josmacha											 $(END)	"
		
.c.o:
			@$(CC) $(CFLAGS) -c $< -o $(<:.c=.o)
			@echo "Compiling $<."

clean:
			@$(RM) $(OBJS)
			
fclean:		clean
			@$(RM) $(NAME)
			@echo "$(RED)Minishell deleted!$(END)"

re:			fclean all

.PHONY:		all clean fclean re